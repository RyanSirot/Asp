@using ZenithDataLib
@model ZenithDataLib.Event

@{
    ViewBag.Title = "Event Details";

    List<Activity> activities = new List<Activity>();
    List<int> actId = new List<int>();

    foreach (var item in ViewBag.activities)
    {
        activities.Add(item);
    }
}

<h2>Event Details</h2>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FromDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FromDateTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ToDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ToDateTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ActivityId)
        </dt>

        <dd>
            @{ 
                foreach (var activity in activities)
                {
                    if (activity.Id == ViewBag.eventactivityid)
                    {
                        @Html.DisplayFor(modelItem => activity.Description)
                    }
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
